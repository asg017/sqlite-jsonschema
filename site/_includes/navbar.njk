<aside>
  <nav class="closed-on-mobile">    
    {% for section in sidebar_menu %}
    {% if section.nested %}
      <details class="sidebar-navbar-section" open>
      <summary>
        <span class="sidebar-navbar-section-title">{{ section.title }}</span>
      </summary>
      <ul class="sidebar-navbar-section-links">
        {% for page in search.pages("url^=/" + section.id, "order title") %}
          <li>
            {% if page.data.url == url %}
            <a href="{{ page.data.url | url }}" aria-current="page" title="{{ page.data.description }}">{{ page.data.title | md(true) }}</a>
            {% else %}
            <a href="{{ page.data.url | url }}" title="{{ page.data.description }}">{{ page.data.title | md(true) }}</a>
            {% endif %}
          </li>
        {% endfor %}
      </ul>  
    </details>
    {% else %}
      <div class="x"> <a href="{{ search.page("url^=/" + section.id).data.url | url }}">{{section.title}}</a></div>
    {% endif %}
    {% endfor %}
    <div style="font-size: .8rem; text-align: right;">
      <code>
        <a href="https://github.com/asg017/sqlite-jsonschema/commit/{{SOURCE_ID}}">{{SOURCE_ID_SHORT}}</a>
      </code>
    </div>
  </nav>
  <style>
  .x {
    margin-bottom: var(--spacing);
    padding-bottom: var(--spacing);
    border-bottom: var(--border-width) solid var(--accordion-border-color);
  }
  .sidebar-navbarx {
    padding-top: 6rem;
    border-right: 1px solid #cecece;
    height: 100vh;
  }
  .sidebar-navbar-section-links li {
    padding-left: 1rem;
  }
  .sidebar-navbar-section-title {
    color: #ececec;
    font-weight: 600;
    color: #2c2c2c;
  }
  aside a {
    color: #ececec;
    color: #2c2c2c;
  }
  [role=link]:is([aria-current],:hover,:active,:focus), a:is([aria-current],:hover,:active,:focus) {
    color: var(--primary);
  }
</style>
</aside>